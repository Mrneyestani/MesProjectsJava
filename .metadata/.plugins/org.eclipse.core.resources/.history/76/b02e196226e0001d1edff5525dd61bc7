package fr.doranco.exemple.main.cartePaiement;

import fr.doranco.exemple.entity.CartePaiement;
import fr.doranco.exemple.entity.User;
import fr.doranco.exemple.model.dao.CarteDao;
import fr.doranco.exemple.model.dao.ICartePaiementDao;
import fr.doranco.exemple.model.dao.IUserDao;
import fr.doranco.exemple.model.dao.UserDao;
import fr.doranco.exemple.utils.Dates;

public class MainUpdateCarte {


	public static void main(String[] args) {
		
		try {
			final ICartePaiementDao cartePaiementDao = new CarteDao();
			int id = 8;
			System.out.println("Modification de la Carte n° "+id+" ...");
			CartePaiement carte = cartePaiementDao.getCartePaiement(id);
			carte.setId(id);
			carte.setNumeroCarte("5432659867654585");
			carte.setDateValidite(Dates.convertStringToDate("25/03/2027"));
			carte.setCryptogramme(658);
			System.out.println("Modification réussie.");
			System.out.println(carte);
			
//			System.out.println("Supression d'une carte :");
//			cartePaiementDao.removeCartePaiement(2);
//			System.out.println("Suppression réussie.");
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
	}

}
