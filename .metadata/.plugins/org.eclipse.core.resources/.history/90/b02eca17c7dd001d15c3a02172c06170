	public void afficherListSepare() {
		for (Employe l : personnels) {
			if (l instanceof Vendeur) {
//				lists.add(l);
				System.out.println("Vendeur : "+ l.getNom());
			}
			else if (l instanceof Representant) {
				
				System.out.println("Representant : "+ l.getNom());
			}
			else if (l instanceof Technicien) {
				
				System.out.println("Technicien : "+ l.getNom());
			}
			else if (l instanceof Manutentionnaire) {
				
				System.out.println("Manutentionnaire : "+ l.getNom());
			}
			else if (l instanceof TechnARisque) {
				
				System.out.println("TechnARisque : "+ l.getNom());
			}
			else if (l instanceof ManutARisque) {
				
				System.out.println("ManutARisque : "+ l.getNom());
			}
			
		}
		
		}
		
	



	public void afficherSalaires() {
		
		double salaire = 0;
		String nom;
		for (Employe personne : personnels) {
			salaire = personne.calculerSalaire();
			nom = personne.getNom();
			salaireTotale += salaire;
			System.out.println("        \n" + nom + " gagne " + salaire + " euros.");
		}
	}
	
	public double salaireMoyen() {
		return salaireTotale / personnels.size();
		
	}

	public List<Employe> getPersonnels() {
		return personnels;
	}

	
}
